<!DOCTYPE html>
<html>
<head>
  <title>Authentication</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= yield %>

<% if flash.any? %>
    <% flash.each do |key, value| %>
      <p><%= key %>:<%= value %><p>
    <%end%>
<% end %>

</body>
</html>
